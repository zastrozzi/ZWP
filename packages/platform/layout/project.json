{
  "name": "platform.layout",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "packages/platform/layout/src",
  "prefix": "platform.layout",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:package",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "packages/platform/layout/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/platform/layout/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/platform/layout/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
          "command": "cd dist/packages/platform/layout && npm publish --access public"
      },
      "dependsOn": ["build"]

  },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "packages/platform/layout/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "packages/platform/layout/**/*.ts",
          "packages/platform/layout/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
