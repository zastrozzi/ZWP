{
    "name": "platform.files",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "packages/platform/files/src",
    "prefix": "platform.files",
    "targets": {
        "build": {
            "executor": "@nrwl/angular:package",
            "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
            "options": {
                "project": "packages/platform/files/ng-package.json"
            },
            "configurations": {
                "production": {
                    "tsConfig": "packages/platform/files/tsconfig.lib.prod.json"
                },
                "development": {
                    "tsConfig": "packages/platform/files/tsconfig.lib.json"
                }
            },
            "defaultConfiguration": "production"
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd dist/packages/platform/files && npm publish --access public"
            },
            "dependsOn": ["build"]

        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/platform/files/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/platform/files/**/*.ts", 
                    "packages/platform/files/**/*.html"
                ]
            }
        }
    },
    "tags": []
}
